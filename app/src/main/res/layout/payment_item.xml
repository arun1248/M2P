<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/itemCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:cardBackgroundColor="@color/payment_ic_bg"
        app:layout_constraintBottom_toBottomOf="@id/paymentIc"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/paymentIc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:src="@drawable/ic_wallet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/itemCard"
        app:layout_constraintTop_toTopOf="@id/itemCard" />

    <TextView
        android:id="@+id/paymentType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/top_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/paymentIc"
        app:layout_constraintStart_toStartOf="@id/paymentIc"
        app:layout_constraintTop_toBottomOf="@id/itemCard" />


</androidx.constraintlayout.widget.ConstraintLayout>